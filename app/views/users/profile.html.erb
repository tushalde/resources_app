<% @page_title = "Profile | Resources App" %>
<div class="container">
	<h1 class="align-center">Profile</h1>
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
	    <%= f.label :firstname %> <span class="required">*</span>
	    <%= f.text_field :firstname, class: 'form-control', required: true %>
	    <%= f.label :lastname %>
	    <%= f.text_field :lastname, class: 'form-control' %>
	    <%= f.label :username %>
	    <a href="#" title="Username" data-toggle="popover" data-trigger="hover" data-content="Should be unique between 3 to 20 characters"><span class="helplink"></span></a>
	    <%= f.text_field :username, class: 'form-control', required: true %>
	    <%= f.label :email %>
	    <%= f.email_field :email, class: 'form-control', required: true %>
	    <%= f.label :password %>
	    <a href="#" title="Password" data-toggle="popover" data-trigger="hover" data-content="Should be between 6 to 20 characters<br><u>N.B.:</u> Passwords are stored encrypted."><span class="helplink"></span></a>
	    <%= f.password_field :password, class: 'form-control', required: true, value: "*******", disabled: true %>
	    <%= f.label :password_confirmation %>
	    <%= f.password_field :password_confirmation, class: 'form-control', value: "*******", disabled: true %> <br>
	    <%= f.submit "Update profile", class: 'btn btn-primary', disabled: true %>
	  <% end %>
	  <p>Forgot password? <%= link_to "Email", "#" %></p>
	  <% if @user.errors.any? %>
	  	<br>
	    <ul class="alert alert-warning">
	    <% for message_error in @user.errors.full_messages %>
	      <li><%= message_error %></li>
	    <% end %>
	    </ul>
	  <% end %>
	</div>
</div>